class Solution {
public:
    long long maxMatrixSum(vector<vector<int>>& matrix) {
        int cnt = 0;
        long long sum = 0;
        int zero = 0;
        int maxi = 1e9;
        for(int i=0; i<matrix.size(); i++){
            for(int j=0; j<matrix[0].size(); j++){
                if(matrix[i][j] < 0){
                    cnt++;
                }
                if(matrix[i][j]==0){
                    zero++;
                }
                sum += abs(matrix[i][j]);
                maxi = min(maxi,abs(matrix[i][j]));
            }
        }
        if(cnt%2==0 || zero>0){
            return sum;
        }
        return sum - 2*maxi;
    }
};
